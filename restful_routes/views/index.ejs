<%- include ('partials/header'); %>

<h1> This is the Index page</h1>
<div class ="ui main text container">
    <div class="ui huge header">Patient List with Details</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
            <div class="item">
                <div class="image">
                     <img src ="<%= blog.image %>">
                </div>
                <div class="content">
                    <a class="header" href="/blogs/<%= blog._id %>">Patient Name: <%= blog.title%></a>
                    <div class="meta">
                        <span><strong>Age: </strong><%= blog.age %></span>
                        <span><strong>Date: </strong><%=blog.created.toDateString()%></span>
                    </div>
                    <div class="description">
                      <p><strong>Description</strong><%- blog.body.substring(0,100)%>...</p>
                    </div>
                    <div class = "extra">
                        <a class="ui floated basic blue button" href="/blogs/<%= blog._id %>"> Read More
                        <i class="right chevron icon"></i>
                        </a>
                    </div>
                </div>
                
            </div>
        <% }) %>
        </div>
    </div>
</div>

</body>
</html>



 <%include ('partials/footer'); %>
